# Database - MUST use postgresql+asyncpg:// (not postgresql://)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/optimark

# JWT - REQUIRED: Set a strong random value in production (e.g. openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_JWT_SECRET=your-backend-jwt-secret
BACKEND_JWT_EXPIRE_MINUTES=10080

# CORS - Comma-separated allowed origins (frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=10
STORAGE_ROOT=private_storage
SIGNED_URL_SECRET=your-signed-url-secret
SIGNED_URL_EXPIRE_SECONDS=600

# Queue / token settings
REDIS_URL=redis://localhost:6379/0
TOKEN_COST_PER_SUCCESS_SHEET=1

# OAuth
GOOGLE_CLIENT_ID=
FRONTEND_URL=http://localhost:3000

# First admin - Set email to auto-grant admin role on signup
ADMIN_EMAIL=

# Stripe (optional - for online payments)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# FRONTEND_URL=http://localhost:3000
